# MongoDB Connection
MONGO_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/architect_db

# ImageKit Configuration
IMAGEKIT_PUBLIC_KEY=your_public_key
IMAGEKIT_PRIVATE_KEY=your_private_key
IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/your_imagekit_id

# SMTP Configuration (Nodemailer)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_email_password
SMTP_FROM=Your Name <your_email@example.com>
SMTP_ADMIN_EMAIL=admin@example.com

# Admin Authentication
# Generate a secure secret key likely using `openssl rand -base64 32`
ADMIN_SECRET=your_super_secret_admin_key
# The password for the admin login
ADMIN_PASSWORD=your_secure_admin_password
